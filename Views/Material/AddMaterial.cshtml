@model Hattmakarens_system.ViewModels.MaterialViewModel
    @using Hattmakarens_system.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lägg till Material</h1>

    <div>
        @using (Html.BeginForm("AddMaterial", "Material", FormMethod.Post))
        {

            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.PickedColor, new { @class = "col-md-2 control-label" })
                <div class="col-md-10"> 
                    @Html.DropDownList("PickedColor", Model.ColorsToPickFrom, new {@class = "form-control"})
                    @Html.ListBoxFor(m => m.PickedColor, Model.ColorsToPickFrom, new {@class = "form-control"})
                   
                </div>
            </div><br />
            <div class="form-group">
                @Html.LabelFor(m => m.Type, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    
                    @Html.DropDownListFor(m => m.Type, new List<SelectListItem>
                {
                   new SelectListItem { Value = "0", Text = "Tyg" },
                   new SelectListItem { Value = "1", Text = "Dekoration" },
                   new SelectListItem { Value = "2", Text = "Tråd" }

                }))
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Lägg till material" />
                </div>
            </div>}
    </div>
