@model Hattmakarens_system.ViewModels.ActiveHatsViewModel
@{
    ViewBag.Title = "ActiveHats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Dina pågående hattprojekt</h1>
<div>
    <br />
    <table class="statistik-tabell">
        <thead><tr><td><h3>Beställningsnummer</h3></td><td><h3>Hattnamn</h3></td><td><h3>Beställningsdatum</h3></td><td><h3>Prioriterad</h3></td></tr></thead>
        <tbody>
            @foreach (var hat in Model.hats)
            {
                <tr>
                    <td>@hat.OrderId</td>
                    <td>@hat.Name</td>
                    <td>@hat.Order.Date.ToShortDateString()</td>
                    <td>@if(hat.Order.Priority)
                    {
                        <p class="ja">Ja</p>
                    }else { <p class="nej">Nej</p> }
                    </td>
                </tr>
            }
            <tr><td></td><td></td><td></td><td></td></tr>
        </tbody>
        <tfoot>
            <tr>
                <td><h4>Totalt antal aktiva hattar: @Model.hats.Count</h4></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
