@model Hattmakarens_system.ViewModels.ActiveHatsViewModel
@{
    ViewBag.Title = "ActiveHats";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="halv">
    <h1>Dina pågående hattprojekt</h1>
    <table class="statistik-tabell">
        <thead><tr><td>Beställningsnummer</td><td>Hattnamn</td><td>Beställningsdatum</td><td>Prioriterad</td></tr></thead>
        <tbody>
            @foreach (var hat in Model.hats)
            {
                <tr>
                    <td>@hat.OrderId</td>
                    <td>@hat.Name</td>
                    <td>@hat.Order.Date.ToShortDateString()</td>
                    <td>@if(hat.Order.Priority)
                    {
                        <p class="ja">Ja</p>
                    }else { <p class="nej">Nej</p> }
                    </td>
                </tr>
            }
            <tr><td></td><td></td><td></td><td></td></tr>
        </tbody>
        <tfoot>
            <tr>
                <td><p><strong>Totalt antal aktiva hattar: @Model.hats.Count</strong></p></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
</div>
<div class="halv">
    <h1>Aktiva beställningar</h1>
    <table class="statistik-tabell">
        <thead>
            <tr>
                <td>Beställningsnummer</td>
                <td>Antal hattar</td>
                <td>Datum</td>
                <td>Kund</td>
                <td>Prioriterad</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.Id &nbsp; &nbsp; &nbsp; @Html.ActionLink("Gå till beställning", "ViewOrder", "Order", new { order.Id }, null)</td>
                    <td>@order.Hats.Count</td>
                    <td>@order.Date.ToShortDateString()</td>
                    <td>@order.Customer.Name</td>
                    @if (order.Priority)
                    {
                        <td><p class="ja">Ja</p></td>
                    }
                    else
                    {
                        <td><p>Nej</p></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>