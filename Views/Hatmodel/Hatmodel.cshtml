@model Hattmakarens_system.ViewModels.HatmodelViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "MaterialsToPickFrom";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lägg till hattmodell</title>
</head>
<body>
    <h1>Lägg till hattmodell</h1>
    <div>
        @using (Html.BeginForm("Hatmodel", "Hatmodel", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
        <div id="partial">
            @Html.Partial("~/Views/Material/_PickMaterial.cshtml", Model)
        </div>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(h => h.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(h => h.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(h => h.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(h => h.Price, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(h => h.Price, new { @class = "form-control" })
                        @Html.ValidationMessageFor(h => h.Price, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(h => h.Description, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(h => h.Description, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.Label("Välj bild")
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Lägg till hattmodell" />
                    </div>
                </div>
            </div>
        }
    </div>

</body>
</html>
@section scripts{
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.13.0.min.js"></script>
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
}

