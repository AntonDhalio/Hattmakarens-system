<!DOCTYPE html>
<html>
<head>
    <link href="https://fonts.googleapis.com/css2?family=Akshar:wght@500&display=swap" rel="stylesheet">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hattmakaren</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body >
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" id="hideOnRegOrder">
            <div class="navbar-header" id="header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="image">
                    @if (Request.IsAuthenticated)
                    {
                    <a href='@Url.Action("ActiveHats", "Hat")'>
                        <img src="~/UploadedImages/Hattmakaren_1_FIX.png" title="logga" alt="" id="logga" />
                    </a>
                    
                    }
                    else
                    {
                        <img src="~/UploadedImages/Hattmakaren_1_FIX.png" title="logga" alt="" id="logga" />

                    }
                    </div>
            </div>
            @if (Request.IsAuthenticated)
            {
                <div class="navbar-collapse collapse" id="menu-text">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Sök", "OrderSearch", "Search")</li>

                        <li>@Html.ActionLink("Skapa beställning", "CreateOrder", "Order")</li>

                        <li>@Html.ActionLink("Se statistik", "Index", "Statistic")</li>

                        <li>@Html.ActionLink("Lägg till hattmodell", "Hatmodel", "Hatmodel", new { IsAdded = false }, null)</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
            }
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Powered by #it</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    #logga { width: 100%; height: 100%; }
    #image{width: 80px; height: 100%; padding-top: 1%;}
    #header{width: 100px}
    #menu-text{font-family:'Akshar', sans-serif; font-size: 120%}
    .navbar-inverse {
        background-color: #c8beb8;
        border-color: #c8beb8;
    }
    a {
        color: #545454 !important;
        text-decoration: none;
    }
    a:hover,
    a:focus {
            color: black !important;
            text-decoration: underline;
        }
</style>
