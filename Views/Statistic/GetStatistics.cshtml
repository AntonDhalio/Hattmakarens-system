@model Hattmakarens_system.ViewModels.StatisticViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Statistic/_GetStatistics.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <title>GetStatistics</title>
</head>
<body>
    <div>
        <br />
        <table class="statistik-tabell">
            <thead><tr><td><h3>Beställningsnummer</h3></td><td><h3>Antal hattar</h3></td><td><h3>Beställningsdatum</h3></td><td><h3>Summa</h3></td></tr></thead>
            <tbody>
                   @foreach(var order in Model.orders)
            {
                    <tr>
                        <td>@order.Id</td><td>@order.Hats.Count</td><td>@order.Date.ToShortDateString()</td><td>@order.TotalSum</td>
                    </tr>
            }
                <tr><td></td><td></td><td></td><td></td></tr>
            </tbody>
            <tfoot><tr>
                       <td><h4>Totalt antal beställingar: @Model.totalOrdersCount</h4></td><td><h4>Totalt antal hattar: @Model.totalHatsCount</h4></td><td></td><td><h4>Total summa: @Model.totalSum</h4></td>
                </tr></tfoot>
        </table>
    </div>
</body>
</html>
