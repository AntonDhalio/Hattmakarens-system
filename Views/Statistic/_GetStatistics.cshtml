@model Hattmakarens_system.ViewModels.StatisticViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Customers";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width; text/html; charset=UTF-8" />
    <title>GetStatistics</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <h1>Se statistik</h1>
        @using (Html.BeginForm("GetStatistics", "Statistic", FormMethod.Post))
        {
            <div class="tredjedel">
                <h3>Välj datum</h3>
                <table >
                    <thead><tr><td><b>Från</b></td><td style="padding-left: 20px;"><b>Till</b></td></tr></thead>
                    <tbody>
                        <tr>
                            <td>
                            @*<input type="date" asp-for="fromDate" name="fromDate" />*@
                            @Html.EditorFor(m => m.fromDate, new { htmlAttributes = new { @class = "datepicker" } })
                                @*@Html.ValidationMessageFor(m => m.fromDate, "", new { @class = "text-danger" })*@</td>
                            <td style="padding-left: 20px;">
                                @*<input type="date" asp-for="toDate" name="toDate" />*@
                                @Html.EditorFor(m => m.toDate, new { htmlAttributes = new { @class = "datepicker" } })
                                @*@Html.ValidationMessageFor(m => m.toDate, "", new { @class = "text-danger" })*@
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="tredjedel" style="padding-left: 120px;">
                <h3>Välj kund</h3>
                <table>
                    <thead><tr><td><b>Välj&nbsp;kund</b></td></tr></thead>
                    <tbody>
                        <tr>
                            <td>@Html.DropDownList("customerId", Model.customers, "Välj kund", new { @class = "form-control" })</td>

                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="tredjedel" style="padding-left: 120px;">
                <h3>Välj hattmodell</h3>
                <table>
                    <thead><tr><td><b>Välj&nbsp;hattmodell</b></td></tr></thead>
                    <tbody>
                        <tr>
                            <td>@Html.DropDownList("hatmodelId", Model.hatmodels, "Välj hattmodell", new { @class = "form-control" })</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            <br />
            
            <input type="submit" class="btn btn-primary" value="Se statistik" />
        }
    </div>
    @RenderBody()

</body>
</html>








