@model Hattmakarens_system.ViewModels.CostumerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lägg till ny kund</title>
</head>
<body>
    <h1>Lägg till kund</h1>
    <div>
        @using (Html.BeginForm("AddCustomer", "Customer", FormMethod.Post))
        {
            <div class="form-group">
                @Html.LabelFor(c => c.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Email, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Adress, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(c => c.Adress, new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Adress, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(c => c.Comment, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(c => c.Comment, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Lägg till kund" />
                    </div>
                </div>
                <input type="button" class="btn" value="Gå tillbaka till skapa beställningen" onclick="location.href = '@Url.Action("SearchCustomer", "Customer")'" />
            </div>
        }
    </div>

    
</body>
        
</html>
