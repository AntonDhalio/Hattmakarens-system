@model Hattmakarens_system.ViewModels.OrderModel

<table class="table">

    <tr>
        <th>
            Namn
        </th>
        <th>
            Storlek
        </th>
        <th>
            Pris
        </th>
        <th>
            Kommentar
        </th>
        <th>
            Tillverkare
        </th>
        <th>
            Status
        </th>
    </tr>
    @if (Model != null)
    {
        if (Model.Hats != null)
        {
            foreach (var item in Model.Hats)
            {
                if (item.ModelID != 1)/// 1 är ID för specialtillverkad hatt
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        @ViewBag.Users[item.UserId]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.ActionLink("Redigera", "Edit", "Hat", new { hatId = item.Id }, null)
                    </td>
                    <td>
                        @Html.ActionLink("Ta bort", "Delete", "Hat", new { orderId = item.OrderId, hatId = item.Id },
                     new { onclick = "return confirm('Är du säker på att du vill ta bort den här hatten?');" })
                    </td>
                </tr>
                }
            }
        }
    }
</table>